@using TTSPrep_MVC.Models.ViewModels

@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="container container-register col-lg-4 col-md-6 col-sm-6" style="margin-top: 15rem; margin-bottom: 0.5rem;">
    <div class="justify-content-center">
        <div class="card card-lg text-center">
            <div class="card-body" style="padding: 2.25rem;">
                <div>
                    <h2 class="text-center" style="margin-bottom: 2.25rem;">Log in</h2>
                    <form method="post" asp-action="Login">
                        <div class="form-group mb-4">
                            <input class="form-control input-group" asp-for="Email" placeholder="Email">
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group mb-4">
                            <input class="form-control input-group" asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block" type="submit" style="display: block; width: 100%;">
                                Login
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <div>
        No account? <a asp-controller="Account" asp-action="SignUp">Create one!</a>

        <form method="post" asp-action="Login">
            <div class="form-group mb-4">
                <input hidden class="form-control input-group" asp-for="Email" placeholder="Email" value="admin@example.com">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group mb-4">
                <input hidden class="form-control input-group" asp-for="Password" placeholder="Password" value="Password!23">
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-secondary btn-block" type="submit" style="background: none;
                  border: none;
                  padding: 0;
                  font: inherit;
                  cursor: pointer;
                  color: #0077cc;
                  opacity: 50%;
                ">
                    Demo Login
                </button>
            </div>
        </form>
    </div>
</div>