@using TTSPrep_MVC.Models.ViewModels
@model DashboardVM
@{
    ViewData["Title"] = "Dashboard";
}


<div class="text-center">
    <h1>Projects (@Model.Projects.Count())</h1>

    <br>

    <!-- (Create new project) -->
    <button class="btn btn-primary">
        <a class="nav-link text-light" asp-area="" asp-controller="Project" asp-action="Create">
            <i class="bi bi-plus-lg me-2"></i><b>Create new project</b>
        </a>
    </button>


    <table class="table table-striped container">
        <thead>
        <th>Title</th>
        <th>Created</th>
        <th></th> @*Project option buttons*@
        </thead>

        <tbody>
            @foreach (var project in Model.Projects)
            {
            <tr>
                    <td>@project.Title</td>
                    <td>@project.CreatedDate</td> @*(Date yyyy/MM/dd, hh/mm/ss Military time)*@
                <td>
                        <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                            <a class="btn btn-s btn-danger me-2" asp-controller="Project" asp-action="Delete" asp-route-projectId=@project.Id>
                                <i class="bi bi-x-lg me-2"></i>Remove
                            </a>
                            <a class="btn btn-s btn-warning me-2" asp-controller="Project" asp-action="Edit" asp-route-projectId=@project.Id>
                                <i class="bi bi-pencil-square me-2"></i>Edit
                            </a>
                            <a class="btn btn-s btn-primary me-2" asp-controller="Project" asp-action="Index" asp-route-projectId=@project.Id>
                                <i class="bi bi-arrow-right me-2"></i>Open
                            </a>
                        </div>
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>