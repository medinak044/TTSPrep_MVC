@using TTSPrep_MVC.Models.ViewModels

@model ProjectVM
@{
    // ViewData["Title"] = "Project";
}

<div class="text-center">
    <h1 class="display-4">Projects</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <br>

    <!-- Button trigger modal (Create new project) -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        + Create new project
    </button>

    <!-- Modal (Create new project) -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="createModalLabel">Create a project</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-action="Create">
                    <div class="modal-body">
                        <input type="hidden" id="AppUserId" name="AppUserId" asp-for="OwnerId" />
                        <div class="form-group">
                            <input asp-for="Title" class="form-control" placeholder="Title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Description" class="form-control" placeholder="Description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

@*                         <div class="form-group">
                            <div class="input-group mb-4" [hidden]="false">
                                <span class="input-group-text">
                                    <span class="fa fa-user" aria-hidden="true"></span>
                                </span>
                                <input class="form-control" formControlName="title"
                                       placeholder="Title">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-4" [hidden]="false">
                                <span class="input-group-text">
                                    <span class="fa fa-user" aria-hidden="true"></span>
                                </span>
                                <input class="form-control" formControlName="description"
                                       placeholder="Description">
                            </div>
                        </div> *@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button id="btnSave" type="button" class="btn btn-primary">Save changes</button>
                        @* <button type="submit" class="btn btn-primary">Save changes</button> *@
                    </div>
                </form>
            </div>
        </div>
    </div>

    <table class="table table-striped container">
        <thead>
            <th>Title</th>
            <th>Created</th>
            <th></th> @*Project option buttons*@ 
        </thead>

        <tbody>
            <tr>
                <td>(Title)</td>
                <td>(Date yyyy/MM/dd, hh/ss Military time)</td>
                <td>
                    <button *ngIf="appUser.id != currentUser.id" class="btn btn-sm btn-danger me-2"
                            (click)="deleteUser(user.id)">
                        <i class="bi bi-x-lg me-2"></i>Remove
                    </button>
                    <button class="btn btn-sm btn-warning me-2" routerLink="/edit-user/{{user.id}}">
                        <i class="bi bi-pencil-square me-2"></i>Edit
                    </button>
                    <button class="btn btn-sm btn-info me-2" routerLink="/profile/{{user.id}}">
                        <i class="bi bi-arrow-right me-2"></i>Open
                    </button>
                </td>
            </tr>
        </tbody>
    </table>

</div>